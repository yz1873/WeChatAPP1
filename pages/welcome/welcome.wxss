/*类似与html的body*/
page{
    background-color: #b3d4db;
}
/*弹性盒子模型*/
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.user_icon{
    height: 200rpx;
    width: 200rpx;
    margin-top: 160rpx;
}
.user_name{
    margin-top: 100rpx;
    font-size: 32rpx;
    font-weight: bold;
}
.moto{
    font-size: 22rpx;
    font-weight: bold;
    color: #405f80;
}
.moto_container{
    margin-top: 200rpx;
    border: 1px solid #405f80;
    width: 200rpx;
    height: 80rpx;
    border-radius: 5px;
    text-align: center;
    line-height: 80rpx;
}